@using Slonik.Models
@model Detal
@{
    ViewBag.Title = "Redakt";
}

<style>
    a {
        font-family: Arial;
        text-decoration: none;
        color: white;
        padding: 10px;
    }

        a:hover {
            background: #5d1aed;
            border-radius: 20px;
        }

    main {
        padding-top: 50px;
        text-align: center;
        background-color: white;
        color: black;
        margin: auto;
        width: 80%;
        min-width: 70%;
        max-width: 100%;
        box-shadow: 0px 0px 5px 5px black;
        opacity: 90%;
        height: 100%;
        min-height: 605px;
        min-height: 395px;
        flex: 1 0 auto;
    }

    body {
        margin: 0;
        font-family: arial;
        background: url(../../Content/Images/Stanok.jpg) no-repeat;
        background-attachment: fixed;
        background-size: 100%;
        display: grid;
        grid-template-rows: 1fr auto;
    }

    header {
        background-color: #000;
        width: 98%;
        height: 15%;
        max-height: 46px;
        padding: 1%;
        margin: 0px;
    }

    footer {
        background-color: black;
        width: 100%;
        height: 17%;
        max-height: 50px;
        margin-top: 0;
        color: white;
        text-align: center;
        padding-top: 0.1%;
        font-size: 18px;
        flex-shrink: 0;
    }

    a {
        font-family: Arial;
        text-decoration: none;
        color: white;
        padding: 10px;
    }

        a:hover {
            background: #5d1aed;
            border-radius: 20px;
        }
</style>

<body>
    <header style="align-content:center; text-align:center;">
        <div style="padding:0px; text-align:center; margin-left:5%">
            <img src="~/Content/Images/SlonikLogo.jpg" style="width: 4%; margin: 0px; float: left; border-radius: 50px; margin-top: -0.5%">
            <p style="color: white; float: left; font-family: arial; font-size: 30px;margin: 0; margin-left: 0.5%; ">Slonik Pay</p>
        </div>

        <div style="display:inline-block; padding:0; margin-left:-15%; margin-top:0.7%">
            <a href="~/admin/index">Главная</a>
            <a href="~/admin/AddDetail">Добавить деталь</a>
            <a href="~/admin/showall">Все детали</a>
            <a href="~/admin/lastorder">Последний заказ</a>
            <a href="~/admin/ShowAllArhiv">Архив</a>
            <a href="~/admin/ShowObor">Станки</a>
            <a href="~/home/indexstart">Выход</a>
        </div>
    </header>

    <main>
        @using (Html.BeginForm("Zame", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary()



            <div class="form-group">

            </div>

            <h4>Максимальный диаметр детали (мм)</h4>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.D, new { @class = "form-control" })
            </div>

            <h4>Максимальная длина детали (мм)</h4>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.LDetal, new { @class = "form-control" })
            </div>



            <h4>Материал</h4>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Materia, new { @class = "form-control" })
            </div>



            <h4>Твёрдость</h4>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Hurd, new { @class = "form-control" })
            </div>
            <h4>Стоимость детали</h4>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.StoimostDet, new { @class = "form-control" })
            </div>
            <h4>Средний диаметр (мм)</h4>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.dO, new { @class = "form-control" })
            </div>

            <h4>Длина обрабатываемой поверхности всей детали (мм)</h4>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.LProt, new { @class = "form-control" })
            </div>
            <h4>Средний припуск на обработку по всем поверхностям (мм)</h4>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Glubina, new { @class = "form-control" })
            </div>
            <div style="visibility:hidden">
                @Html.LabelFor(m => m.Id, new { @class = "col-md-3 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Id, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-1 col-md-7">
                    <input type="submit" class="btn btn-default" value="СОХРАНИТЬ" />
                </div>
            </div>

        }
    </main>


    <footer>
        <p>&copy; @DateTime.Now.Year <a href="~/admin/team">Mikrasavchiki team</a></p>
    </footer>
</body>