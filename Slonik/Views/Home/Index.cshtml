@using Slonik.Models
@model FindModel

@{
    ViewBag.Title = "Index";
}

<style>
       @* a {
            font-family: Arial;
            text-decoration: none;
            color: white;
            padding: 10px;
        }
            a:hover {
                background: #5d1aed;
                border-radius: 20px;
            }*@

    main {
        padding-top: 50px;
        text-align: center;
        background-color: white;
        color: black;
        margin: auto;
        width: 80%;
        min-width: 70%;
        max-width: 100%;
        box-shadow: 0px 0px 5px 5px black;
        opacity: 90%;
        height: 100%;
        min-height: 593px;
        flex: 1 0 auto;
    }

        body {
            margin: 0;
            font-family: arial;
            background: url(../../Content/Images/Stanok.jpg) no-repeat;
            background-attachment:fixed;
            background-size: 100%;
            display: grid;
            grid-template-rows: 1fr auto;
        }

    header {
        background-color: #000;
        width: 98%;
        height: 15%;
        max-height: 46px;
        padding: 1%;
        margin: 0px;
    }

    footer {
        background-color: black;
        width: 100%;
        height: 17%;
        max-height: 50px;
        margin-top: 0;
        color: white;
        text-align: center;
        padding-top: 0.1%;
        font-size: 18px;
        flex-shrink: 0;
    }

        a {
            font-family: Arial;
            text-decoration: none;
            color: white;
            padding: 10px;
        }

            a:hover {
                background: #5d1aed;
                border-radius: 20px;
            }

</style>

<body>
    <header style="align-content:center; text-align:center;">
        <div style="padding:0px; text-align:center; margin-left:5%">
            <img src="~/Content/Images/SlonikLogo.jpg" style="width: 4%; margin: 0px; float: left; border-radius: 50px; margin-top: -0.5%">
            <p style="color: white; float: left; font-family: arial; font-size: 30px;margin: 0; margin-left: 0.5%; ">Slonik Pay</p>
        </div>

        <div style="display:inline-block; padding:0; margin-left:-15%">
            <a href="~/home/index" style="float:left;">Главная</a>
            <a href="~/home/AddDetals" style="float:left;">Добавить деталь</a>
            <a href="~/home/showall" style="float:left;">Все детали</a>
            <a href="~/home/lastorder" style="float:left;">Последний заказ</a>
            <a href="~/home/indexstart" style="float:left">Выход</a>
        </div>
    </header>

    <main>
        @using (Ajax.BeginForm("ShowDetal", null, new AjaxOptions { LoadingElementDuration = 1000, UpdateTargetId = "result", HttpMethod = "post" }, null)) //Реализация запроса с помощью Ajax
        {
            <div>
                <div>@Html.Label("Номер заказа: ")</div>
                <div>@Html.TextBoxFor(x => x.NumOrder)</div>
            </div>
            <div><input type="submit" value="Поиск" style="margin-top:10px;" /></div>
        }
        <div id="result" style="height: 50px; display: flex; text-align:center;"></div>
    </main>


    <footer>
        <p>&copy; @DateTime.Now.Year <a href="~/home/team">Mikrasavchiki team</a></p>
    </footer>
</body>

