@using Slonik.Models

@{
    ViewBag.Title = "IndexStart";
}

<style>
    form {
        padding: 10px;
        margin: auto;
        margin-top: 200px;
        height: 350px;
        width: 400px;
        border: 200px 400px;
        background-color: aliceblue;
        border-radius: 20px;
        text-align: center;
        box-shadow: 0px 0px 5px 5px black;
    }

    input {
        width: 300px;
        height: 40px;
        text-align: center;
        margin-top: 20px
    }

    .text {
        font-size: 25px;
        font-weight: 600;
        padding-top: 45px;
        margin-bottom: 35px;
    }

    .text2 {
        margin-top: 20px;
        margin-bottom: 20px;
        text-align: center;
        font-weight: 600;
        color: azure
    }

    #button {
        margin-top: 20px;
        margin-bottom: 40px;
        width: 150px;
        height: 40px;
        background-color: #5d1aed;
        color: white;
        border-radius: 20px;
        font-size: 16px;
    }

        #button:active {
            background: #1b0087;
            border-radius: 20px;
            border: none;
            outline: none;
            font-size: 14px;
        }

    input {
        width: 300px;
        height: 40px;
        text-align: center;
        margin-top: 20px;
    }

    body {
        margin: 0;
        font-family: arial;
        background: url(../../Content/Images/Stanok.jpg) no-repeat;
        background-size: 100%;
        min-height: 100%;
        display: grid;
        grid-template-rows: 1fr auto;
    }

    header {
        background-color: #000;
        width: 100%;
        height: 50px;
        text-align: center;
        padding-top: 20px;
        margin: 0px;
    }

    footer {
        background-color: black;
        width: 100%;
        height: 50px;
        margin-top: 265px;
        color: white;
        text-align: center;
        padding-top: 30px;
        font-size: 18px;
        position: absolute;
        bottom: 0;
        left: 0;
    }
</style>
<body>
    <header>
        <img src="~/Content/Images/SlonikLogo.jpg" style="width: 4%; margin: 0px; float: left; margin-left: 150px; border-radius: 50px; margin-top: -15px">
        <p style="color: white; float: left; font-family: arial; font-size: 30px;margin: 0; margin-left: 25px; ">Slonik Pay</p>
    </header>

    @using (Html.BeginForm("Polzow", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <h2>Авторизация</h2>
        @Html.ValidationSummary()
        <div class="form-group">
            <h4>Логин</h4>
            <div class="col-md-10" style="margin-top:-30px;">
                @Html.TextBox("Login", null, new { @class = "form-control" })
            </div>
            <h4>Пароль</h4>
            <div class="col-md-10" style="margin-top:-30px;">
                @Html.Password("Pass", null, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-1 col-md-7">
                <input type="submit" class="btn btn-default" value="Войти" />
            </div>
        </div>
    }

    <footer>
        <p>&copy; @DateTime.Now.Year - Mikrasavchiki team</p>
    </footer>
</body>