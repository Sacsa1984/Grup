@using Slonik.Models
@model IndexViewModel
@{
    ViewBag.Title = "LastOrder";
}

<style>
        a {
            font-family: Arial;
            text-decoration: none;
            color: white;
            padding: 10px;
        }
            a:hover {
                background: #5d1aed;
                border-radius: 20px;
            }

    main {
        padding-top: 50px;
        text-align: center;
        background-color: white;
        color: black;
        margin: auto;
        width: 80%;
        min-width: 70%;
        max-width: 100%;
        box-shadow: 0px 0px 5px 5px black;
        opacity: 90%;
        height: 100%;
        min-height: 605px;
        flex: 1 0 auto;
    }

        body {
            margin: 0;
            font-family: arial;
            background: url(../../Content/Images/Stanok.jpg) no-repeat;
            background-attachment:fixed;
            background-size: 100%;
            display: grid;
            grid-template-rows: 1fr auto;
        }

    header {
        background-color: #000;
        width: 98%;
        height: 15%;
        max-height: 46px;
        padding: 1%;
        margin: 0px;
    }

    footer {
        background-color: black;
        width: 100%;
        height: 17%;
        max-height: 50px;
        margin-top: 0;
        color: white;
        text-align: center;
        padding-top: 0.1%;
        font-size: 18px;
        flex-shrink: 0;
    }

        a {
            font-family: Arial;
            text-decoration: none;
            color: white;
            padding: 10px;
        }

            a:hover {
                background: #5d1aed;
                border-radius: 20px;
            }

</style>

<script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.min.js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/fancyapps/fancybox@3.5.7/dist/jquery.fancybox.min.css" />
<script src="https://cdn.jsdelivr.net/gh/fancyapps/fancybox@3.5.7/dist/jquery.fancybox.min.js"></script>

<body>
    <header style="align-content:center; text-align:center;">
        <div style="padding:0px; text-align:center; margin-left:5%">
            <img src="~/Content/Images/SlonikLogo.jpg" style="width: 4%; margin: 0px; float: left; border-radius: 50px; margin-top: -0.5%">
            <p style="color: white; float: left; font-family: arial; font-size: 30px;margin: 0; margin-left: 0.5%; ">Slonik Pay</p>
        </div>

        <div style="display:inline-block; padding:0; margin-left:-15%; margin-top:0.7%">
            <a href="~/admin/index">Главная</a>
            <a href="~/admin/AddDetail">Добавить деталь</a>
            <a href="~/admin/showall">Все детали</a>
            <a href="~/admin/lastorder">Последний заказ</a>
            <a href="~/admin/ShowAllArhiv">Архив</a>
            <a href="~/admin/ShowObor">Станки</a>
            <a href="~/home/indexstart">Выход</a>
        </div>
    </header>

    <main>
        <table class="table table-bordered" border="1" style="width:100%; table-layout:fixed; text-align:center">
            <tr>

                <td>Номер заказа</td>
                <td>Название</td>
                <td>Чертёж</td>
                <td>Диаметр (мм)</td>
                <td>Диаметр отверстия (мм)</td>
                <td>Вес Детали (кг)</td>
                <td>Материал</td>
                <td>Тип обработки</td>
                <td>Длина детали (мм)</td>
                <td>Точность</td>
                <td>Припуск на обработку (мм)</td>
                <td>Длина поверхности обработки (мм)</td>
                <td>Стоимость токарной обработки</td>

            </tr>
            @if (Model.Detals.Count() > 1)
            {
                for (int i = Model.Detals.Count() - 1; i < Model.Detals.Count(); i++)
                {

                    <tr>

                        <td>@Model.Detals.ElementAt(i).NumOrder</td>
                        <td>@Model.Detals.ElementAt(i).Nazvanie</td>
                        <td><a href="@Model.Detals.ElementAt(i).Picture" data-fancybox="images" style="margin:0; padding:0"><img style="width:90%" src="@Model.Detals.ElementAt(i).Picture" /></a></td>
                        <td>@Model.Detals.ElementAt(i).D </td>
                        <td>@Model.Detals.ElementAt(i).dO </td>
                        <td>@Model.Detals.ElementAt(i).WeithDetail </td>
                        <td>@Model.Detals.ElementAt(i).Materia </td>
                        <td>@Model.Detals.ElementAt(i).TypeObr </td>
                        <td>@Model.Detals.ElementAt(i).LDetal </td>
                        <td>@Model.Detals.ElementAt(i).Tochnost</td>
                        <td>@Model.Detals.ElementAt(i).Glubina</td>
                        <td>@Model.Detals.ElementAt(i).LProt</td>
                        <td>@Math.Truncate(Model.Detals.ElementAt(i).StoimostRashot)</td>


                    </tr>


                }

            }
        </table>
    </main>


    <footer>
        <p>&copy; @DateTime.Now.Year <a href="~/admin/team">Mikrasavchiki team</a></p>
    </footer>
</body>



