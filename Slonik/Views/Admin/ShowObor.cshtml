@using Slonik.Models
@model IndexViewModel
@{
    ViewBag.Title = "ShowObor";
}

<style>
    a {
        font-family: Arial;
        text-decoration: none;
        color: white;
        padding: 10px;
    }

        a:hover {
            background: #5d1aed;
            border-radius: 20px;
        }

    main {
        padding-top: 50px;
        background-color: white;
        color: black;
        margin: auto;
        width: 80%;
        min-width: 70%;
        max-width: 100%;
        box-shadow: 0px 0px 5px 5px black;
        opacity: 90%;
        height: 100%;
        min-height: 605px;
        flex: 1 0 auto;
    }

    body {
        margin: 0;
        font-family: arial;
        background: url(../../Content/Images/Stanok.jpg) no-repeat;
        background-attachment: fixed;
        background-size: 100%;
        display: grid;
        grid-template-rows: 1fr auto;
    }

    header {
        background-color: #000;
        width: 98%;
        height: 15%;
        max-height: 46px;
        padding: 1%;
        margin: 0px;
    }

    footer {
        background-color: black;
        width: 100%;
        height: 17%;
        max-height: 50px;
        margin-top: 0;
        color: white;
        text-align: center;
        padding-top: 0.1%;
        font-size: 18px;
        flex-shrink: 0;
    }

    a {
        font-family: Arial;
        text-decoration: none;
        color: white;
        padding: 10px;
    }

        a:hover {
            background: #5d1aed;
            border-radius: 20px;
        }
</style>

<body>
    <header style="align-content:center; text-align:center;">
        <div style="padding:0px; text-align:center; margin-left:5%">
            <img src="~/Content/Images/SlonikLogo.jpg" style="width: 4%; margin: 0px; float: left; border-radius: 50px; margin-top: -0.5%">
            <p style="color: white; float: left; font-family: arial; font-size: 30px;margin: 0; margin-left: 0.5%; ">Slonik Pay</p>
        </div>

        <div style="display:inline-block; padding:0; margin-left:-15%; margin-top:0.7%">
            <a href="~/admin/index">Главная</a>
            <a href="~/admin/AddDetail">Добавить деталь</a>
            <a href="~/admin/showall">Все детали</a>
            <a href="~/admin/lastorder">Последний заказ</a>
            <a href="~/admin/ShowAllArhiv">Архив</a>
            <a href="~/admin/ShowObor">Станки</a>
            <a href="~/home/indexstart">Выход</a>
        </div>
    </header>

    <main>

        <div style="height:5%">
            <a href="~/admin/AddFacilities" style="        color: black;
        margin-left: 2%;
        border-radius: 10px;
        background-color: #5d1aed;
        color: white;
        opacity: 100%;
        padding: 1% 1% 1% 1%
">Добавить станок</a>
        </div>


        <table class="table table-bordered" border="1" style="width:100%; table-layout:fixed; text-align:center">

            <tr>

                <td>Название оборудования</td>
                <td>Кофициэнт точности станка</td>
                <td>Кофициэнт стоимости</td>
                <td>Кофициэнт станка</td>
                <td>дополнительный коффициэнт</td>
                <td>Максимальная глубина резанья за проход</td>
                <td>Стоимость мм обработки</td>


            </tr>

            @foreach (Coefic item in Model.Coefic)
            {
                <tr>
                    <td>@item.Stanok</td>
                    <td>@item.CoficTochnost </td>
                    <td>@item.CoeficStanka </td>
                    <td>@item.coeficientStoim </td>
                    <td>@item.DopCoeficient </td>
                    <td>@item.GlubMaxStan </td>
                    <td>@item.stinostMM_proto </td>
                </tr>
            }
        </table>

    </main>


    <footer>
        <p>&copy; @DateTime.Now.Year <a href="~/admin/team">Mikrasavchiki team</a></p>
    </footer>
</body>